<Window x:Class="TLEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TL Markdown Editor" Height="800" Width="1400" MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen" Background="#1E1E1E">
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="BorderBrush" Value="#6A6A6A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.3" Color="Black"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5A5A5A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4A9EFF"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.4" Color="#4A9EFF"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2D7CDB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#404040"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Large Button Style -->
        <Style x:Key="LargeButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="36"/>
        </Style>
        
        <!-- Small Button Style -->
        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="MinHeight" Value="28"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="BorderBrush" Value="#6A6A6A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="#F0F0F0"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="MainBorder" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0" Name="PART_ContentHost" 
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                      Margin="{TemplateBinding Padding}"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Left"/>
                                    <ToggleButton Grid.Column="1" x:Name="PART_DropDownButton"
                                                  Background="Transparent" BorderBrush="Transparent" 
                                                  BorderThickness="0" IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Focusable="False">
                                        <Path Fill="{TemplateBinding Foreground}" HorizontalAlignment="Center" VerticalAlignment="Center"
                                              Data="M 0 0 L 4 4 L 8 0 Z"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup x:Name="PART_Popup" 
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom" 
                                   PopupAnimation="Slide"
                                   AllowsTransparency="True">
                                <Border Background="#4A4A4A" BorderBrush="#6A6A6A" BorderThickness="1" 
                                        CornerRadius="4" MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="200">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#4A9EFF"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="MainBorder" Property="BorderBrush" Value="#4A9EFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#F0F0F0"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="ItemBorder" Background="{TemplateBinding Background}" 
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#5A5A5A"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#4A9EFF"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Style.Resources>
        </Style>

        <!-- ToggleButton Style -->
        <Style x:Key="ModernToggleButton" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#505050"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4A9EFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D4A22"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A9EFF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#3A7BD5"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TreeView Styles -->
        <Style x:Key="ModernTreeView" TargetType="TreeView">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- TreeViewItem Style -->
        <Style x:Key="ModernTreeViewItem" TargetType="TreeViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Resources>
                <!-- Override system colors for inactive selection -->
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#3A3A3A"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#505050"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#4A9EFF"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True"/>
                        <Condition Property="IsSelectionActive" Value="False"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#3A3A3A"/>
                    <Setter Property="Foreground" Value="White"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <!-- Tile Container Style -->
        <Style x:Key="RibbonTile" TargetType="Border">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="BorderBrush" Value="#505050"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="8,4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tile Header Style -->
        <Style x:Key="TileHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Custom ScrollViewer Style -->
        <Style x:Key="ModernScrollViewer" TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>
                            
                            <!-- Horizontal ScrollBar -->
                            <ScrollBar x:Name="PART_HorizontalScrollBar" Grid.Column="0" Grid.Row="1"
                                       Orientation="Horizontal" Height="12"
                                       Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                       Value="{TemplateBinding HorizontalOffset}"
                                       Maximum="{TemplateBinding ScrollableWidth}"
                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                       Background="#2D2D30" BorderThickness="0">
                                <ScrollBar.Template>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Border Background="#2D2D30" CornerRadius="6" Height="12">
                                            <Track x:Name="PART_Track" IsDirectionReversed="False" Height="8" VerticalAlignment="Center">
                                                <Track.Thumb>
                                                    <Thumb>
                                                        <Thumb.Template>
                                                            <ControlTemplate TargetType="Thumb">
                                                                <Border x:Name="ThumbBorder" Background="#606060" CornerRadius="4" Height="8">
                                                                    <VisualStateManager.VisualStateGroups>
                                                                        <VisualStateGroup x:Name="CommonStates">
                                                                            <VisualState x:Name="Normal"/>
                                                                            <VisualState x:Name="MouseOver">
                                                                                <Storyboard>
                                                                                    <ColorAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#4A9EFF" Duration="0:0:0.2"/>
                                                                                </Storyboard>
                                                                            </VisualState>
                                                                        </VisualStateGroup>
                                                                    </VisualStateManager.VisualStateGroups>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Thumb.Template>
                                                    </Thumb>
                                                </Track.Thumb>
                                            </Track>
                                        </Border>
                                    </ControlTemplate>
                                </ScrollBar.Template>
                            </ScrollBar>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom RichTextBox Style with modern scrollbars -->
        <Style x:Key="DarkRichTextBox" TargetType="RichTextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RichTextBox">
                        <Border Background="{TemplateBinding Background}" BorderThickness="0">
                            <ScrollViewer x:Name="PART_ContentHost" Background="Transparent" BorderThickness="0">
                                <ScrollViewer.Template>
                                    <ControlTemplate TargetType="ScrollViewer">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <ScrollContentPresenter Grid.Column="0" Grid.Row="0"/>
                                            
                                            <!-- Vertical ScrollBar -->
                                            <ScrollBar x:Name="PART_VerticalScrollBar" Grid.Column="1" Grid.Row="0"
                                                       Orientation="Vertical" Width="12"
                                                       Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}"
                                                       Value="{TemplateBinding VerticalOffset}"
                                                       Maximum="{TemplateBinding ScrollableHeight}"
                                                       ViewportSize="{TemplateBinding ViewportHeight}"
                                                       Background="#2D2D30" BorderThickness="0">
                                                <ScrollBar.Template>
                                                    <ControlTemplate TargetType="ScrollBar">
                                                        <Border Background="#2D2D30" CornerRadius="6" Width="12">
                                                            <Track x:Name="PART_Track" IsDirectionReversed="True" Width="8" HorizontalAlignment="Center">
                                                                <Track.Thumb>
                                                                    <Thumb>
                                                                        <Thumb.Template>
                                                                            <ControlTemplate TargetType="Thumb">
                                                                                <Border x:Name="ThumbBorder" Background="#606060" CornerRadius="4" Width="8">
                                                                                    <VisualStateManager.VisualStateGroups>
                                                                                        <VisualStateGroup x:Name="CommonStates">
                                                                                            <VisualState x:Name="Normal"/>
                                                                                            <VisualState x:Name="MouseOver">
                                                                                                <Storyboard>
                                                                                                    <ColorAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#4A9EFF" Duration="0:0:0.2"/>
                                                                                                </Storyboard>
                                                                                            </VisualState>
                                                                                        </VisualStateGroup>
                                                                                    </VisualStateManager.VisualStateGroups>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Thumb.Template>
                                                                    </Thumb>
                                                                </Track.Thumb>
                                                            </Track>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ScrollBar.Template>
                                            </ScrollBar>
                                            
                                            <!-- Horizontal ScrollBar -->
                                            <ScrollBar x:Name="PART_HorizontalScrollBar" Grid.Column="0" Grid.Row="1"
                                                       Orientation="Horizontal" Height="12"
                                                       Visibility="{TemplateBinding ComputedHorizontalScrollBarVisibility}"
                                                       Value="{TemplateBinding HorizontalOffset}"
                                                       Maximum="{TemplateBinding ScrollableWidth}"
                                                       ViewportSize="{TemplateBinding ViewportWidth}"
                                                       Background="#2D2D30" BorderThickness="0">
                                                <ScrollBar.Template>
                                                    <ControlTemplate TargetType="ScrollBar">
                                                        <Border Background="#2D2D30" CornerRadius="6" Height="12">
                                                            <Track x:Name="PART_Track" IsDirectionReversed="False" Height="8" VerticalAlignment="Center">
                                                                <Track.Thumb>
                                                                    <Thumb>
                                                                        <Thumb.Template>
                                                                            <ControlTemplate TargetType="Thumb">
                                                                                <Border x:Name="ThumbBorder" Background="#606060" CornerRadius="4" Height="8">
                                                                                    <VisualStateManager.VisualStateGroups>
                                                                                        <VisualStateGroup x:Name="CommonStates">
                                                                                            <VisualState x:Name="Normal"/>
                                                                                            <VisualState x:Name="MouseOver">
                                                                                                <Storyboard>
                                                                                                    <ColorAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#4A9EFF" Duration="0:0:0.2"/>
                                                                                                </Storyboard>
                                                                                            </VisualState>
                                                                                        </VisualStateGroup>
                                                                                    </VisualStateManager.VisualStateGroups>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Thumb.Template>
                                                                    </Thumb>
                                                                </Track.Thumb>
                                                            </Track>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ScrollBar.Template>
                                            </ScrollBar>
                                        </Grid>
                                    </ControlTemplate>
                                </ScrollViewer.Template>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Background="#1E1E1E">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="200"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="250" MinWidth="200"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Panel - Folders -->
        <Border Name="LeftPanel" Grid.Column="0" Background="#2D2D30" BorderBrush="#404040" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Folder Tree -->
                <Border Grid.Row="0" Background="#3C3C3C" BorderBrush="#505050" BorderThickness="0,0,0,1" Padding="12,8">
                    <TextBlock Text="📁 Files" FontWeight="SemiBold" FontSize="13" Foreground="#E0E0E0"/>
                </Border>
                <TreeView Grid.Row="1" Name="FolderTree" Margin="8,8,8,8" Style="{StaticResource ModernTreeView}"
                          SelectedItemChanged="FolderTree_SelectedItemChanged">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem" BasedOn="{StaticResource ModernTreeViewItem}">
                            <Style.Resources>
                                <Style TargetType="TreeViewItem" BasedOn="{StaticResource ModernTreeViewItem}"/>
                            </Style.Resources>
                        </Style>
                    </TreeView.ItemContainerStyle>
                </TreeView>
            </Grid>
        </Border>
        
        <!-- Left Splitter -->
        <GridSplitter Name="LeftSplitter" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      Background="#404040" ResizeBehavior="PreviousAndNext"/>
        
        <!-- Center Panel - Editor -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Modern Ribbon Interface -->
            <Border Grid.Row="0" Background="#1E1E1E" BorderBrush="#2D2D2D" BorderThickness="0,0,0,1">
                <ScrollViewer Style="{StaticResource ModernScrollViewer}" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal" Margin="8,8">
                        
                        <!-- File Tile -->
                        <Border Style="{StaticResource RibbonTile}">
                            <StackPanel>
                                <TextBlock Text="File" Style="{StaticResource TileHeader}"/>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Primary Actions Row 1 -->
                                    <Button Grid.Row="0" Grid.Column="0" Name="OpenButton" Content="📂 Open" 
                                            Click="OpenButton_Click" Style="{StaticResource LargeButton}" 
                                            ToolTip="Open file (Ctrl+O)" Margin="0,0,2,0"/>
                                    <Button Grid.Row="0" Grid.Column="1" Name="SaveButton" Content="💾 Save" 
                                            Click="SaveButton_Click" Style="{StaticResource LargeButton}" 
                                            ToolTip="Save file (Ctrl+S)" Margin="2,0,0,0"/>
                                    
                                    <!-- Secondary Actions Row 2 -->
                                    <Button Grid.Row="1" Grid.Column="0" Name="SaveAsButton" Content="📄 Save As..." 
                                            Click="SaveAsButton_Click" Style="{StaticResource ModernButton}" 
                                            ToolTip="Save as different file" Margin="0,4,2,0"/>
                                    <Button Grid.Row="1" Grid.Column="1" Name="OpenFolderButton" Content="📁 Folder" 
                                            Click="OpenFolderButton_Click" Style="{StaticResource ModernButton}" 
                                            ToolTip="Open folder" Margin="2,4,0,0"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Edit Tile -->
                        <Border Style="{StaticResource RibbonTile}">
                            <StackPanel>
                                <TextBlock Text="Edit" Style="{StaticResource TileHeader}"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Name="UndoButton" Content="↶ Undo" Click="UndoButton_Click" Style="{StaticResource ModernButton}" ToolTip="Undo (Ctrl+Z)"/>
                                    <Button Name="RedoButton" Content="↷ Redo" Click="RedoButton_Click" Style="{StaticResource ModernButton}" ToolTip="Redo (Ctrl+Y)"/>
                                </StackPanel>
                                <Button Name="FindReplaceButton" Content="🔍 Find/Replace" Click="FindReplaceButton_Click" Style="{StaticResource ModernButton}" ToolTip="Find/Replace (Ctrl+F)" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Insert Tile -->
                        <Border Style="{StaticResource RibbonTile}">
                            <StackPanel>
                                <TextBlock Text="Insert" Style="{StaticResource TileHeader}"/>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- List Buttons Row 1 -->
                                    <Button Grid.Row="0" Grid.Column="0" Name="BulletListButton" Content="• List" 
                                            Click="BulletListButton_Click" Style="{StaticResource ModernButton}" 
                                            ToolTip="Bullet List" Margin="0,0,2,0"/>
                                    <Button Grid.Row="0" Grid.Column="1" Name="NumberListButton" Content="1. List" 
                                            Click="NumberListButton_Click" Style="{StaticResource ModernButton}" 
                                            ToolTip="Numbered List" Margin="2,0,0,0"/>
                                    
                                    <!-- Table Button Row 2 -->
                                    <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Name="InsertTableButton" 
                                            Content="⊞ Insert Table" Click="InsertTableButton_Click" 
                                            Style="{StaticResource ModernButton}" ToolTip="Insert Table" 
                                            Margin="0,4,0,0" HorizontalAlignment="Stretch"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- View Tile -->
                        <Border Style="{StaticResource RibbonTile}">
                            <StackPanel>
                                <TextBlock Text="View" Style="{StaticResource TileHeader}"/>
                                <StackPanel Orientation="Vertical">
                                    <Button Name="ShowFoldersToggle" Content="📁 Hide Folders" 
                                            Click="ShowFoldersMenuItem_Click" Style="{StaticResource ModernButton}" 
                                            ToolTip="Show/Hide Folders"/>
                                    <Button Name="ShowStructureToggle" Content="📋 Hide Structure" 
                                            Click="ShowStructureMenuItem_Click" Style="{StaticResource ModernButton}" 
                                            ToolTip="Show/Hide Document Structure" Margin="0,4,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
            <!-- Markdown Editor -->
            <Border Grid.Row="1" Background="#1E1E1E" BorderThickness="0" Margin="8">
                <RichTextBox Name="Editor" Margin="16" Style="{StaticResource DarkRichTextBox}"
                             AcceptsReturn="True" AcceptsTab="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             FontFamily="Segoe UI" FontSize="14"
                             TextChanged="Editor_TextChanged"/>
            </Border>
        </Grid>
        
        <!-- Right Splitter -->
        <GridSplitter Name="RightSplitter" Grid.Column="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      Background="#404040" ResizeBehavior="PreviousAndNext"/>
        
        <!-- Right Panel - Document Structure -->
        <Border Name="RightPanel" Grid.Column="4" Background="#2D2D30" BorderBrush="#404040" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Document Structure -->
                <Border Grid.Row="0" Background="#3C3C3C" BorderBrush="#505050" BorderThickness="0,0,0,1" Padding="12,8">
